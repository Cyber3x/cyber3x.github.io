---
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title={SITE_TITLE}
  description={SITE_DESCRIPTION}
  className="flex h-svh max-w-sm flex-col justify-center"
>
  <main class="space-y-4">
    <p>
      <span class="font-bold text-red-600 dark:text-orange-500">Neven's</span> blog.
      Welcome!
    </p>
    <p>
      A piece of internet where I think, hopefully, and then share those
      thoughts with strangers.
    </p>
  </main>
</Layout>
